@font-face
	font-family Exo
	src url(../../fonts/Exo.otf)
@font-face
	font-family 'Trebuchet MS'
	src url(../../fonts/9412.ttf)

.page
	background-image url('../../images/bg.png')
	background-size cover
	width 100%
	height 100%
	position absolute
	font-family 'Trebuchet MS'

.container
	width 100%
	height 100%
	max-width 1200px
	margin auto
	display flex
	flex-direction column
	justify-content center

.container__title
	font-family Exo
	color #fff
	font-size 36px
	text-align center
	margin-bottom 27px
	margin-top 10px

/* Упаковки */
.items
	display flex
	justify-content space-around
	flex-wrap wrap
.item
	position relative
	margin-bottom 70px
	*
		transition .2s ease
/* /Упаковки */

/* Фоны */
.item__frame
	position relative
.item__frame-default-img-hover,
.item__frame-selected-img-hover,
.item__frame-disabled-img,
.item__frame-selected
	position absolute
	width 100%
	left 0
	top 0
.item__frame-default
	position relative
	z-index 30
	opacity 1
.item__frame-default-img
	position relative
	z-index 20
.item__frame-selected
	position absolute
	z-index 20
	opacity 1
.item__frame-selected-img
	position relative
	z-index 20
.selected	.item__frame-default
	opacity 0
.item__frame-img-disabled
	z-index 10
	opacity 0
/* /Фоны */

/* Ховеры */
	/* default */
.item:hover
	.item__frame-default-img
		opacity 0
	.item__weight
		background-color lightBlueColor
	.item__description-a,
	.item__description-dot
		color lightBlueColor
	/* /default */

	/* selected */
.item.selected:hover
	.item__frame-selected-img
		opacity 0
	.item__title-row1.item__title-row1-selected-hover
		opacity 1
	.item__title-row1
		opacity 0
	.item__weight
		background-color lightRedColor
	/* /selected */
/* /Ховеры */

/* Содержимое */
.item__content
	position absolute
	padding-left 48px
	padding-top 23px
	width 100%
	height 100%
	top 0
	z-index 30
/* /Содержимое */

/* Заголовки */
.item__title
	position relative
.item__title-row1
	color #666
	font-size 16px

.item__title-row1-selected-hover
	position absolute
	color lightRedColor
	top 0
	opacity 0

.item__title-row2
	color #000
	font-size 48px
	font-weight 600
	margin-top 8px
	line-height 54px
.item__title-row3
	font-size 24px
	font-weight 600
	margin-bottom 16px
/* /Заголовки */

/* Что внутри */
.item__text
	font-size 14px
	line-height 17px
	color #666
	max-width 160px
/* /Что внутри */

/* Вес упаковки */
.item__weight
	position absolute
	bottom 17px
	right 15px
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 81px
	height 81px
	border-radius 50%
	background-color blueColor
	color #fff
.item__weight-number
	font-size 42px
.item__weight-units
	font-size 21px
/* /Вес упаковки */

/* Подпись под упаковкой */
.item__description
	color #fff
	text-align center
	position absolute
	width 100%
	top 100%
	padding-top 13px
	font-size 13px
.item__description_disabled
	opacity 0
	color #ff6
.item__description_selected
	opacity 0
.item__description-a
	color blueColor
	font-weight 600
	text-decoration none
	border-bottom 1px dashed blueColor
.item__description-dot
	color blueColor
	font-weight 600
	text-decoration none
	margin-left -4px
/* /Подпись под упаковкой */

/* Товар закончился */
.ended
	.item__frame-default,
	.item__frame-selected
		opacity 0
	.item__weight
		background-color greyColor
	.item__description
		opacity 0
	.item__description_disabled
		opacity 1
	.item__frame-default
		opacity 0
	.item__frame-img-disabled
		opacity 1
	.item__title-row1,
	.item__title-row2,
	.item__title-row3,
	.item__text
		color greyColor
.item.ended:hover
	.item__weight
		background-color greyColor
/* /Товар закончился */

/* Товар выбран */
.selected
	.item__description
		opacity 0
	.item__description_selected
		opacity 1
	.item__frame-default-img
		opacity 0
	.item__frame-default-img-hover
		opacity 0
	.item__frame-selected-img
		opacity 1
		z-index 10
	.item__frame-selected-img-hover
		opacity 1
		z-index 5
	.item__weight
		background-color redColor
/* /Товар выбран */

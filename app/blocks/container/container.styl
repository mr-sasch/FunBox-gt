@font-face
	font-family Exo
	src url(../../fonts/Exo.otf)
@font-face
	font-family 'Trebuchet MS'
	src url(../../fonts/9412.ttf)

.page
	position absolute
	width 100%
	height 100%
	font-family 'Trebuchet MS'
	background-image url('../../images/bg.png')
	background-size cover

.container
	margin auto
	display flex
	flex-direction column
	width 100%
	max-width 1200px
	height 100%
	justify-content center

.container__title
	margin-top 10px
	margin-bottom 27px
	font-family Exo
	font-size 36px
	text-align center
	color #fff

/* Упаковки */
.items
	display flex
	justify-content space-around
	flex-wrap wrap
.item
	position relative
	margin-bottom 70px
	*
		transition .2s ease
/* /Упаковки */

/* Фоны */
.item__frame
	position relative
.item__frame-default-img-hover,
.item__frame-selected-img-hover,
.item__frame-disabled-img,
.item__frame-selected
	position absolute
	top 0
	left 0
	width 100%
.item__frame-default
	position relative
	z-index 30
	opacity 1
.item__frame-default-img
	position relative
	z-index 20
.item__frame-selected
	position absolute
	z-index 20
	opacity 1
.item__frame-selected-img
	position relative
	z-index 20
.item__frame-img-disabled
	z-index 10
	opacity 0
/* /Фоны */

/* Ховеры */
	/* default */
.item:hover:not(.not-hover)
	.item__frame-default-img
		opacity 0
	.item__weight
		background-color lightBlueColor
	.item__description-a,
	.item__description-dot
		color lightBlueColor
	/* /default */

	/* selected */
.item.selected:hover:not(.not-hover)
	.item__frame-selected-img
		opacity 0
	.item__title-row1.item__title-row1-selected-hover
		opacity 1
	.item__title-row1
		opacity 0
	.item__weight
		background-color lightRedColor
	/* /selected */
/* /Ховеры */

/* Содержимое */
.item__content
	position absolute
	z-index 30
	top 0
	padding-top 23px
	padding-left 48px
	width 100%
	height 100%
/* /Содержимое */

/* Заголовки */
.item__title
	position relative
.item__title-row1
	font-size 16px
	color #666

.item__title-row1-selected-hover
	position absolute
	top 0
	color lightRedColor
	opacity 0

.item__title-row2
	margin-top 8px
	font-size 48px
	font-weight 600
	line-height 54px
	color #000
.item__title-row3
	margin-bottom 16px
	font-size 24px
	font-weight 600
/* /Заголовки */

/* Что внутри */
.item__text
	max-width 160px
	font-size 14px
	line-height 17px
	color #666
/* /Что внутри */

/* Вес упаковки */
.item__weight
	position absolute
	right 15px
	bottom 17px
	display flex
	flex-direction column
	align-items center
	justify-content center
	width 81px
	height 81px
	color #fff
	border-radius 50%
	background-color blueColor
.item__weight-number
	font-size 42px
.item__weight-units
	font-size 21px
/* /Вес упаковки */

/* Подпись под упаковкой */
.item__description
	position absolute
	top 100%
	padding-top 13px
	width 100%
	font-size 13px
	text-align center
	color #fff
.item__description-disabled
	color #ff6
	opacity 0
.item__description-selected
	opacity 0
.item__description-a
	font-weight 600
	text-decoration none
	color blueColor
	border-bottom 1px dashed blueColor
.item__description-dot
	margin-left -4px
	font-weight 600
	text-decoration none
	color blueColor
/* /Подпись под упаковкой */

/* Товар закончился */
.ended
	.item__frame-default,
	.item__frame-selected
		opacity 0
	.item__weight
		background-color greyColor
	.item__description
		opacity 0
	.item__description_disabled
		opacity 1
	.item__frame-default
		opacity 0
	.item__frame-img-disabled
		opacity 1
	.item__title-row1,
	.item__title-row2,
	.item__title-row3,
	.item__text
		color greyColor
.item.ended:hover
	.item__weight
		background-color greyColor
/* /Товар закончился */

/* Товар выбран */
.selected
	.item__description
		opacity 0
	.item__description-selected
		opacity 1
	.item__frame-default
		opacity 0
	.item__frame-default-img
		opacity 0
	.item__frame-default-img-hover
		opacity 0
	.item__frame-selected-img
		z-index 10
		opacity 1
	.item__frame-selected-img-hover
		z-index 5
		opacity 1
	.item__weight
		background-color redColor
/* /Товар выбран */

